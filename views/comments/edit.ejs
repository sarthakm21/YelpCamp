<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campgrounds.name %> </h1>
        <div style="width: 30%; margin: 30px auto;">
            
            <form action="/campgrounds/<%= campgrounds._id %>/comments/<%= comment._id %>?_method=PUT " method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" value="<%= comment.text %> ">
                </div>
                <!-- <div class="form-group">
                    <input type="text" class="form-control" name="comment[author]" placeholder="Author">
                </div> -->
                <div class="form-group">
                    <button style="width: 100%;" class="btn btn-lg btn-secondary">Submit</button>
                </div>
                
            </form>
            <a href="/campgrounds/<%= campgrounds._id %>">Go Back</a>
        </div> 
    </div>
</div>


<%- include('../partials/footer') %>