<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= found.name %> </h1>
        <div style="width: 30%; margin: 30px auto;">
            
            <form action="/campgrounds/<%= found._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="cg[name]" value="<%= found.name %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="cg[price]" value="<%= found.price %>" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="cg[image]" value="<%= found.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="cg[description]" value="<%= found.description %> ">
                </div>
                <div class="form-group">
                    <button style="width: 100%;" class="btn btn-lg btn-primary">Submit</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div> 
    </div>

</div>


<%- include('../partials/footer') %>